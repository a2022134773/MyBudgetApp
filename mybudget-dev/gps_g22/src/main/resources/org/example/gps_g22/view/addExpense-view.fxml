<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.gps_g22.view.addExpenseView" vgap="10" hgap="10">

    <Label text="Source:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="sourceComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="amountField" promptText="Enter amount" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Save" fx:id="saveButton" onAction="#handleSave" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" />
</GridPane>
