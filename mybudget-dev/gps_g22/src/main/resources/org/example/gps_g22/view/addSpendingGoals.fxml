<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.gps_g22.view.AddSpendingGoalsView" vgap="10" hgap="10">

    <Label text="Source:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="sourceComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Goal Amount:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="amountGoalField" promptText="Enter a goal amount" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Spent Amount:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="amountSpentField" promptText="Enter a spent amount" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Button text="Save" fx:id="saveButton" onAction="#handleSave" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" />
</GridPane>

